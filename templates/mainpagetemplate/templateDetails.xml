<extension version="3.1" type="template" client="site">
	<name>mainpagetemplate</name>
	<creationDate>23-02-2016</creationDate>
	<author>Itunina Alyona</author>
	<authorEmail>alenka__1992@mail.ru</authorEmail>
	<authorUrl></authorUrl>
	<copyright>Copyright (C) All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<version>3.1.0</version>
	<description>TPL_MAINPAGETEMPLATE_XML_DESCRIPTION</description>

   <files>
        <folder>html</folder>
        <folder>css</folder>
		<folder>fonts</folder>
        <folder>images</folder>
        <folder>js</folder>
        <folder>bootstrap</folder>
        <folder>language</folder>
        <filename>component.php</filename>
        <filename>error.php</filename>
        <filename>favicon.ico</filename>
        <filename>index.php</filename>
        <filename>template_preview.png</filename>
        <filename>template_thumbnail.png</filename>
        <filename>templateDetails.xml</filename>
    </files>

    <positions>
        <position>search</position>
        <position>menu</position>
        <position>cart</position>
        <position>feedback</position>
    </positions>

	<!-- 	For core templates, we also install/uninstall the language files in the core language folders.
	-->
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.tpl_mainpagetemplate.ini</language>
		<language tag="en-GB">en-GB/en-GB.tpl_mainpagetemplate.sys.ini</language>
	</languages>


</extension>
